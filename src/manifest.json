{
    "manifest_version": 2,
    "name": "Angular Material version redirect",
    "version": "1.0.0",
    "description": "Automatic redirection of https://material.angular.io/ to a specific verion",
    "icons": {
      "16": "icons/logo_16.png",
      "32": "icons/logo_32.png",
      "48": "icons/logo_48.png",
      "96": "icons/logo_96.png",
      "128": "icons/logo_128.png"
    },
    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "storage",
        "https://*.material.angular.io/*"
    ],
    "background": {
        "scripts": [
            "redirect.js"
        ]
    },
    "browser_action": {
        "default_icon": "icons/logo_32.png",
        "default_title": "Set NgMaterial redirect",
        "default_popup": "popup.html"
    }
}
